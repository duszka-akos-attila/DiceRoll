    <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
  </rowConstraints>
   <children>
      <Label alignment="CENTER" text="Congratulations! You Won!" textFill="GREEN" GridPane.halignment="CENTER" GridPane.valignment="CENTER">
         <font>
            <Font name="System Bold" size="36.0" />
         </font>
      </Label>
      <Label text="Thank you for playing Dice Roll!" GridPane.halignment="CENTER" GridPane.valignment="BOTTOM">
